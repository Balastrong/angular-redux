{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "stripInternal": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "outDir": "../../dist/angular-redux",
    "sourceMap": true,
    "inlineSources": true,
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "migrations/**/*.ts",
    "schematics/**/*.ts",
    "schematics-core/**/*.ts"
  ],
  "exclude": ["**/*.spec.ts"],
  "angularCompilerOptions": {
    "skipMetadataEmit": true,
    "enableSummariesForJit": false,
    "enableIvy": false
  }
}
